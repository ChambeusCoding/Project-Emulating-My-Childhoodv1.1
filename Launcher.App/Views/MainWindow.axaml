<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui/design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Launcher.App.ViewModels"
        x:Class="Launcher.App.Views.MainWindow"
        Width="1200"
        Height="800"
        Background="#121212"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="48"
        mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <DockPanel>

        <!-- Top Command Bar -->
        <Border DockPanel.Dock="Top"
                Height="48"
                Background="#1E1E1E"
                Padding="12,0">
            <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">

                <!-- LEFT: Logo + Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                    <Image Source="avares://Launcher.App/Assets/Shirtfffff.png"
                           Width="75" Height="75"/>
                    <TextBlock Text="E.M.Cbetav1.2"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- CENTER: Search -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button Content="Scan Games"
                            Margin="0,0,8,0"
                            Command="{Binding ScanGamesCommand}"/>
                    <Button Content="Settings"
                            Margin="0,0,16,0"/>
                    <TextBox Width="200"
                             Watermark="Searchâ€¦"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- RIGHT: Buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Content="Plugins" Margin="0,0,8,0"/>
                    <Button Content="Dev" Margin="0,0,8,0"/>
                    <Button Content="Help" Margin="0,0,8,0"/>
                    <Button Content="Discord"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar -->
        <Border DockPanel.Dock="Left"
                Width="220"
                Background="#181818"
                Padding="8">
            <StackPanel>
                <TextBlock Text="Systems" FontWeight="Bold" Margin="4,4,4,12"/>
                <ItemsControl Items="{Binding Systems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" Margin="0,0,0,6"
                                    Command="{Binding DataContext.SelectSystemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Main Content: Game Cards -->
        <ScrollViewer>
            <WrapPanel Margin="16" ItemWidth="160" ItemHeight="220">
                <ItemsControl Items="{Binding FilteredGames}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="160"
                                    Height="220"
                                    Background="#252525"
                                    CornerRadius="6"
                                    Margin="0,0,16,16">
                                <StackPanel>
                                    <!-- Box Art Placeholder -->
                                    <Border Height="160" Background="#333">
                                        <Image Source="{Binding BoxArtPath}" Stretch="UniformToFill"/>
                                    </Border>

                                    <TextBlock Text="{Binding Title}" Margin="6" TextWrapping="Wrap"/>

                                    <Button Content="Play"
                                            Margin="6,2,6,0"
                                            Command="{Binding DataContext.LaunchGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>

    </DockPanel>
</Window>
