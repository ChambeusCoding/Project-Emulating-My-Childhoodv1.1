<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui/design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Launcher.App.ViewModels"
        x:Class="Launcher.App.Views.MainWindow"
        Width="1200"
        Height="800"
        Background="#121212"
        Title="RetroRunner beta 2.1"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="48"
        mc:Ignorable="d">


    <DockPanel>

        <!-- Top Command Bar -->
        <Border DockPanel.Dock="Top"
                Height="48"
                Background="#1E1E1E"
                Padding="12,0">
            <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">

                <!-- LEFT -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                    <Image Source="avares://Launcher.App/Assets/Shirtfffff.png"
                           Width="32" Height="32"/>
                    <TextBlock Text="RetroRunner beta 2.1"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- CENTER -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button Content="Scan Games"
                            Margin="0,0,8,0"
                            Command="{Binding ScanGamesCommand}"/>
                    <TextBox Width="200"
                             Watermark="Searchâ€¦"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- RIGHT -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Content="Plugins"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar -->
        <Border DockPanel.Dock="Left"
                Width="220"
                Background="#181818"
                Padding="8">
            <StackPanel>
                <TextBlock Text="Systems"
                           FontWeight="Bold"
                           Margin="4,4,4,12"/>

                <ItemsControl ItemsSource="{Binding Systems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                                    Margin="0,0,0,6"
                                    HorizontalAlignment="Stretch"
                                    Background="#2A2A2A"
                                    Foreground="White"
                                    CornerRadius="4"
                                    Padding="10,6"
                                    Command="{Binding DataContext.SelectSystemCommand,
                  RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"/>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding FilteredGames}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="16"
                                   ItemWidth="160"
                                   ItemHeight="220"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="160"
                                Height="220"
                                Background="#252525"
                                CornerRadius="6"
                                Margin="0,0,16,16">
                            <StackPanel>
                                <Border Height="160" Background="#333"/>

                                <TextBlock Text="{Binding Title}"
                                           Margin="6"
                                           TextWrapping="Wrap"/>

                                <Button Content="Play"
                                        Margin="6,2,6,0"
                                        Command="{Binding DataContext.LaunchGameCommand,
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </DockPanel>
</Window>
